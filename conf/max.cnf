[maxscale]
threads=auto
admin_host=0.0.0.0
admin_secure_gui=false

[MariaDB-1]
type=server
address=172.20.0.2
port=3306
protocol=MariaDBBackend

[MariaDB-2]
type=server
address=172.20.0.3
port=3306
protocol=MariaDBBackend

[MariaDB-3]
type=server
address=172.20.0.4
port=3306
protocol=MariaDBBackend

[MariaDB-Monitor]
type=monitor
module=mariadbmon
servers=MariaDB-1,MariaDB-2,MariaDB-3
user=maxuser
password=P@ssw0rd
replication_user=repl_user
replication_password=P@ssw0rd
auto_failover=true
auto_rejoin=true
monitor_interval=1s
failcount=3
switchover_timeout=20s
failover_timeout=20s

#cooperative_monitoring_locks=majority_of_all
cooperative_monitoring_locks=majority_of_running

[Read-Write-Service]
type=service
router=readwritesplit
servers=MariaDB-1,MariaDB-2,MariaDB-3
user=maxuser
password=P@ssw0rd

# causal_reads can be one of (none, true/local, global, fast, fast_global)
causal_reads=fast_global
causal_reads_timeout=1s

# To ensure the failed transaction due to a Primary node failure is executed again on the new Primary node
transaction_replay=true

# This is required if LAST_INSERT_ID() is used in the code
transaction_replay_checksum=no_insert_id

delayed_retry_timeout=120s
slave_selection_criteria=ADAPTIVE_ROUTING
#master_accept_reads=true
master_reconnection=true
delayed_retry=true
prune_sescmd_history=true
#lazy_connect=true
#max_slave_connections=0

[Read-Write-Listener]
type=listener
service=Read-Write-Service
protocol=MariaDBClient
port=4006
address=0.0.0.0

[Data-Masking]
type=filter
module=masking
warn_type_mismatch=never
large_payload=abort
rules=/var/lib/maxscale/filter.json

# EOF
