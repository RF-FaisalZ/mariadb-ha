# BOF

docker-compose down
docker-compose up --detach --build
docker container cp ./conf/mariadb1.cnf mariadb1:/etc/mysql/mariadb.conf.d/50-server.cnf
docker container exec mariadb1 bash -c "chmod 644 /etc/mysql/mariadb.conf.d/50-server.cnf"

docker container cp ./conf/mariadb2.cnf mariadb2:/etc/mysql/mariadb.conf.d/50-server.cnf
docker container exec mariadb2 bash -c "chmod 644 /etc/mysql/mariadb.conf.d/50-server.cnf"

docker container cp ./conf/mariadb3.cnf mariadb3:/etc/mysql/mariadb.conf.d/50-server.cnf
docker container exec mariadb3 bash -c "chmod 644 /etc/mysql/mariadb.conf.d/50-server.cnf"

docker container restart mariadb1 mariadb2 mariadb3 max1 max2

sleep 5
docker container exec mariadb1 bash -c "mariadb < /tmp/init/01.sql"
docker container exec mariadb2 bash -c "mariadb < /tmp/init/02.sql"
docker container exec mariadb3 bash -c "mariadb < /tmp/init/02.sql"

# EOF

